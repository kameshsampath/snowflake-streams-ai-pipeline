# Snowflake Real-time Document Search Pipeline Configuration
# Copy this file to .env and fill in your specific values

# Snowflake Account Configuration
# Your Snowflake warehouse name (e.g., FILE_WH, COMPUTE_WH)
SNOWFLAKE_WAREHOUSE=

# Your Snowflake role name (e.g., DOC_SEARCH_ROLE, DEVELOPER_ROLE)
SNOWFLAKE_ROLE=

# Your Snowflake username
SNOWFLAKE_USER=

# Your Snowflake database name for this project (e.g., PDF_PROCESSOR, CORTEX_DEMO_DB)
SNOWFLAKE_DATABASE=

# Local Development Configuration
# Directory containing your PDF documents for upload (optional - used by setup scripts)
DATA_DIR=./scripts/data

# Service Account User
SA_USER=

# this get updated when you run the pat.sh script
SNOWFLAKE_PASSWORD=

# Example values (uncomment and modify as needed):
# SNOWFLAKE_WAREHOUSE=FILE_WH
# SNOWFLAKE_ROLE=DOC_SEARCH_ROLE
# SNOWFLAKE_USER=your_username
# SNOWFLAKE_DATABASE=PDF_PROCESSOR
# SNOWFLAKE_PASSWORD=your_generated_pat
# SA_USER=your_service_account_user
# DATA_DIR=./scripts/data
